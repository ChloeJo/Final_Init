<script>
     $(".header").mouseenter(function(){
        $("#total_feed").attr("src", $("#total_feed").attr("src").replace("eyes.png", "eyes2.png"));  
        $("#alarm").attr("src", $("#alarm").attr("src").replace("alarm.png", "alarm2.png"));  
        $("#msg").attr("src", $("#msg").attr("src").replace("msg.png", "msg2.png"));  
        $("#my_feed").attr("src", $("#my_feed").attr("src").replace("user2.png", "user3.png"));  
        $(".logo").css("color"," #1D4E89");
     });
     $(".header").mouseleave(function(){
        $("#total_feed").attr("src", $("#total_feed").attr("src").replace("eyes2.png", "eyes.png"));  
        $("#alarm").attr("src", $("#alarm").attr("src").replace("alarm2.png", "alarm.png"));  
        $("#msg").attr("src", $("#msg").attr("src").replace("msg2.png", "msg.png"));  
        $("#my_feed").attr("src", $("#my_feed").attr("src").replace("user3.png", "user2.png"));  
        $(".logo").css("color"," #FFFFFF");
     });

    </script>
